<section>
  <div class="videos-collection">
    <% @videos.each do |video| %>
      <div class="video">
        <%= link_to(video) do %>
          <%= image_tag(video.thumb.url.to_s, width: 210) %>
          <h4 class="title"><%= video.title.capitalize %></h4>
        <% end %>
        <p class="channel">Fred Doido</p>
        <p class="views">100 mil vizualizacoes</p>
        <p class="date">4 semanas atras</p>
      </div>
    <% end %>
</section>
