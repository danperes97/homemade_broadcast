<div class="container">
  <% if @videos.present? %>
    <h3 id="youtube-gallery">Found videos with: <span class="search-result"><%= search_params_to_string %></span></h3>
      <% @videos.each do |video| %>
      <hr>
        <div class="row">
          <a href="<%= video_watch_path(token: video.token) %>"
             data-title="<%= video.title %>"
             data-width="1024"
             data-toggle="lightbox" data-gallery="youtubevideos" class="col-sm-4 video">
            <button type="button" class="btn btn-play">
              <span class="glyphicon glyphicon-play" aria-label="Play"></span>
            </button>
            <img src="<%= video.thumb.url %>" class="img-responsive">
          </a>
          <h2><%= video.title %></h2>
          <h5>Views: <%= video.views_count %></h5>
          <h5>Author: <%= video.user.email %></h5>
        </div>
      <% end %>
  <% else %>
    <h3 id="youtube-gallery">Sorry theres no video for this search: <span class="search-result"><%= search_params_to_string %></span></h3>
  <% end %>
</div>
